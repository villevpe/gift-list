{
  "name": "gift-list",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:server && npm run build:client",
    "build:watch": "concurrently --kill-others \"npm run build:server:watch\" \"npm run build:client:watch\"",
    "build:prod": "npm run build:server:prod && npm run build:client:prod",
    "build:client": "webpack --progress --hide-modules",
    "build:client:prod": "webpack -p --progress --hide-modules",
    "build:client:watch": "webpack --watch --progress --hide-modules",
    "build:server": "webpack --config webpack.server.config.js --progress --hide-modules",
    "build:server:prod": "webpack --define process.env.NODE_ENV='production' --config webpack.server.config.js --progress --hide-modules",
    "build:server:watch": "webpack --watch --config webpack.server.config.js --progress --hide-modules",
    "test": "karma start ./karma.config.js --single-run",
    "test:watch": "karma start ./karma.config.js --auto-watch",
    "launch:prod": "npm run build:prod && node --harmony ./dist/server.js",
    "launch:dev": "set DATABASE_URL=postgres://postgres:postgres@localhost:5432/postgres && node --harmony ./dist/server.js"
  },
  "author": "villevpe",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.17.1",
    "compression": "^1.6.2",
    "es6-promise": "^4.1.0",
    "express": "^4.15.2",
    "express-session": "^1.15.2",
    "express-static-gzip": "^0.3.0",
    "pg": "^7.1.0",
    "pg-format": "^1.0.4",
    "socket.io": "^2.0.3",
    "socket.io-client": "^2.0.3",
    "vue": "^2.2.6",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "@types/chai": "^4.0.1",
    "@types/compression": "0.0.34",
    "@types/express": "^4.0.36",
    "@types/express-session": "^1.15.3",
    "@types/mocha": "^2.2.41",
    "@types/pg": "^6.1.43",
    "@types/sinon": "^2.3.3",
    "@types/socket.io": "^1.4.30",
    "@types/socket.io-client": "^1.4.29",
    "@types/webpack": "^3.0.4",
